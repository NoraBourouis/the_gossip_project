<section class="jumbotron text-center">
 <div class="container">
 <h1 class= "display-3 jumbotron-heading">Formulaire d'inscription</h1>
 </div>
 </section>
 <div class="container-fluid">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
      <%= form_tag url_for(action: 'create'), method: "get" do %>
        <div class ="form-group">
          <%= label_tag 'Ton prénom : '%>
          <%= text_field_tag 'first_name', @user.first_name, class: 'form-control'  %>
          </div>
          <div class ="form-group">
            <%= label_tag 'Ton nom de famille : '%>
            <%= text_field_tag 'last_name', @user.last_name, class: 'form-control' %>
          </div>
          <div class ="form-group">
            <%= label_tag 'Ton adresse email : '%>
            <%= text_field_tag 'email', @user.email, class: 'form-control'%>
          </div>
          <div class ="form-group">
            <%= label_tag 'Tape un nombre de 1 à 3 ' %>
            <%= text_field_tag 'city_id', @user.city_id, class: 'form-control'%>
          </div>
          <div class ="form-group">
            <%= label_tag 'Mot de passe : ' %>
            <%= text_field_tag 'password', @user.password, class: 'form-control'%>
          </div>
          <div class ="form-group">
            <%= label_tag 'Confirmer le mot de passe : ' %>
            <%= text_field_tag 'password_confirmation', @user.password_confirmation, class: 'form-control' %>
          </div>
          <div class="form-group text-center">
            <button type="submit" class="btn btn-primary ">M'inscrire</button>
          </div>
    <% end %>
    </div>
    <div class="col-md-3"></div>
    </div>
  </div>

  <% if @user.errors.any? %>
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
