<section class="jumbotron text-center">
 <div class="container">
 <h1 class= "display-3 jumbotron-heading">Connexion</h1>
 </div>
 </section>
 <div class="container-fluid">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6 connexion">
        <%= form_tag url_for(action: 'create'), method: "post" do %>
          <div class ="form-group">
            <%= label_tag 'Ton email de connexion : '%>
            <%= text_field_tag 'email', @user, class: 'form-control' %>
            </div>
          <div class ="form-group">
            <%= label_tag 'Ton mot de passe: '%>
            <%= text_field_tag 'password', @user, class: 'form-control' %>
          </div>
          <div class="form-group text-center">
            <%= submit_tag "Se connecter" %>
          </div>
        <%end%>
      <div class="col-md-3"></div>
  </div>

